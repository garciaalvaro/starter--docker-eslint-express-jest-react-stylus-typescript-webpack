{
	"name": "starter--docker-eslint-express-jest-react-stylus-typescript-webpack",
	"version": "1.0.0",
	"description": "Starter project with the minimum configuration to begin development",
	"scripts": {
		"webpack:dev": "webpack --mode development --watch",
		"webpack:prod": "webpack --mode production",
		"server:dev": "pm2-dev start server.js",
		"server:prod": "pm2 start server.js --name 'starter--docker-eslint-express-jest-react-stylus-typescript-webpack'",
		"server:docker": "pm2-runtime start server.js --name 'starter--docker-eslint-express-jest-react-stylus-typescript-webpack'",
		"server-stop:prod": "pm2 stop starter--docker-eslint-express-jest-react-stylus-typescript-webpack",
		"preprod": "npm run webpack:prod",
		"prod": "npm run server:prod",
		"prod-stop": "npm run server-stop:prod",
		"prestart:docker": "npm run webpack:prod",
		"start:docker": "npm run server:docker",
		"start": "npm run webpack:dev & npm run server:dev",
		"test": "npm run type-check && npm run lint && npm run prettier && jest",
		"type-check": "tsc",
		"jest": "jest --watch",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"prettier": "prettier --check 'src/**/*.{ts,tsx}'"
	},
	"dependencies": {
		"express": "^4.17.1",
		"pm2": "^4.5.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.12.3",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-react": "^7.12.1",
		"@babel/preset-typescript": "^7.12.1",
		"@babel/register": "^7.12.1",
		"@babel/runtime": "^7.12.1",
		"@types/enzyme": "^3.10.8",
		"@types/jest": "^26.0.15",
		"@types/react": "^16.9.55",
		"@types/react-dom": "^16.9.9",
		"@typescript-eslint/eslint-plugin": "^4.6.0",
		"@typescript-eslint/parser": "^4.6.0",
		"babel-loader": "^8.1.0",
		"css-loader": "^5.0.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"eslint": "^7.12.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"html-webpack-plugin": "^4.5.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.1",
		"jest-environment-enzyme": "^7.1.2",
		"jest-enzyme": "^7.1.2",
		"mini-css-extract-plugin": "^1.2.1",
		"nib": "^1.1.2",
		"optimize-css-assets-webpack-plugin": "^5.0.4",
		"prettier": "^2.1.2",
		"stylus": "^0.54.8",
		"stylus-loader": "^4.2.0",
		"terser-webpack-plugin": "^5.0.3",
		"typescript": "^4.0.5",
		"webpack": "^5.3.2",
		"webpack-cli": "^4.1.0"
	},
	"main": "server.js",
	"author": "Alvaro Garcia",
	"license": "MIT",
	"private": true
}
