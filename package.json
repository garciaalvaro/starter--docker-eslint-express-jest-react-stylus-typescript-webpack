{
	"name": "starter--docker-eslint-express-jest-react-stylus-typescript-webpack",
	"version": "1.0.0",
	"description": "App with the minimum configuration to start a new project",
	"scripts": {
		"start": "npm run dev",
		"prebuild": "npm run clean:dist",
		"build": "webpack --mode=production",
		"clean:dist": "rm -rf dist",
		"dev": "webpack --mode=development & npm run server:dev",
		"test": "npm run test:types && npm run test:lint && npm run test:prettier",
		"test:types": "tsc",
		"test:lint": "eslint \"{build,src,types}/**/*.{js,ts,tsx}\" \"*.js\"",
		"test:prettier": "prettier --check \"{build,src,types}/**/*.{js,ts,tsx}\" \"*.js\"",
		"prettier": "prettier --write \"{build,src,types}/**/*.{js,ts,tsx}\" \"*.js\"",
		"test:unit": "jest --watch",
		"docker": "docker-compose up -d",
		"docker:start": "npm run build & npm run serve:docker",
		"docker:stop": "docker-compose down",
		"serve": "pm2 start server.js --name starter--docker-eslint-express-jest-react-stylus-typescript-webpack",
		"serve:stop": "pm2 stop starter--docker-eslint-express-jest-react-stylus-typescript-webpack",
		"serve:dev": "pm2-dev start server.js",
		"serve:docker": "pm2-runtime start server.js --name starter--docker-eslint-express-jest-react-stylus-typescript-webpack"
	},
	"dependencies": {
		"@babel/core": "^7.12.3",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-react": "^7.12.1",
		"@babel/preset-typescript": "^7.12.1",
		"@babel/register": "^7.12.1",
		"@babel/runtime": "^7.12.1",
		"@types/react": "^16.9.55",
		"@types/react-dom": "^16.9.9",
		"babel-loader": "^8.1.0",
		"css-loader": "^5.0.0",
		"express": "^4.17.1",
		"html-webpack-plugin": "^4.5.0",
		"mini-css-extract-plugin": "^1.2.1",
		"nib": "^1.1.2",
		"optimize-css-assets-webpack-plugin": "^5.0.4",
		"pm2": "^4.5.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"stylus": "^0.54.8",
		"stylus-loader": "^4.2.0",
		"terser-webpack-plugin": "^5.0.3",
		"typescript": "^4.0.5",
		"webpack": "^5.3.2",
		"webpack-cli": "^4.1.0"
	},
	"devDependencies": {
		"@types/jest": "^26.0.15",
		"@typescript-eslint/eslint-plugin": "^4.6.0",
		"@typescript-eslint/parser": "^4.6.0",
		"eslint": "^7.12.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.1",
		"prettier": "^2.1.2"
	},
	"main": "server.js",
	"author": "Alvaro Garcia",
	"license": "MIT",
	"private": true
}
